# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=logistics_dispatch
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d

# Telegram Configuration
# API credentials from https://my.telegram.org
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Telegram Session
TELEGRAM_SESSION_NAME=logistics_session
TELEGRAM_PHONE_NUMBER=+998901234567

# Telegram Bot (for sending to channel)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Target Channel/Group (where filtered posts will be sent)
TARGET_CHANNEL_ID=-1001234567890
TARGET_CHANNEL_USERNAME=your_channel_username

# Payment Configuration
# Subscription prices (in UZS)
PRICE_DAILY=50000
PRICE_WEEKLY=300000
PRICE_MONTHLY=1000000

# Telegram Payment Provider Token
TELEGRAM_PAYMENT_PROVIDER_TOKEN=your_payment_provider_token

# Filter Configuration
DISPATCHER_DETECTION_THRESHOLD=0.7
AUTO_APPROVE_THRESHOLD=0.9

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info

# SemySMS Configuration
# API token from https://semysms.net
SEMYSMS_API_TOKEN=your_semysms_api_token_here
